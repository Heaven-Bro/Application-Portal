
<div class="loader-overlay">
    <div class="loader-container">
        <div class="loader-spinner"></div>
        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="loader-message font-text">@Message</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public string? Message { get; set; }
}
