@page "/admin/equipment/edit/{EquipmentId:long}"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Edit Equipment - Admin Panel</PageTitle>

<div class="max-w-3xl mx-auto p-3 md:p-5">
    <div class="mb-5">
        <button class="flex items-center gap-1.5 px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 mb-2" @onclick="NavigateBack">
            <span>←</span>
            <span>Back</span>
        </button>
        <h1 class="text-2xl md:text-3xl font-bold font-title text-gray-900">Edit Equipment</h1>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-10">
            <div class="inline-block w-7 h-7 border-3 border-gray-200 border-t-primary rounded-full animate-spin"></div>
            <p class="text-gray-600 text-sm mt-2">Loading equipment...</p>
        </div>
    }
    else if (loadError != null)
    {
        <div class="text-center py-10 bg-red-50 rounded-lg border border-red-100">
            <div class="text-3xl mb-2">⚠</div>
            <h3 class="text-base font-semibold text-gray-900 mb-1">Failed to load equipment</h3>
            <p class="text-xs text-gray-600 mb-3">@loadError</p>
            <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-sm rounded-lg hover:bg-gray-300" @onclick="LoadEquipment">Retry</button>
        </div>
    }
    else if (model != null)
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
            <EditForm Model="model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="space-y-4 pb-4 border-b border-gray-200">
                    <h3 class="text-base font-semibold font-title text-gray-900">Equipment Details</h3>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Equipment Name *</label>
                        <InputText class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none" 
                                  @bind-Value="model.Name" 
                                  placeholder="Equipment name" />
                        <ValidationMessage For="@(() => model.Name)" class="text-xs text-red-600 mt-0.5" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Equipment Code *</label>
                        <InputText class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none" 
                                  @bind-Value="model.EquipmentCode" 
                                  placeholder="Equipment code" />
                        <ValidationMessage For="@(() => model.EquipmentCode)" class="text-xs text-red-600 mt-0.5" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Category *</label>
                        <InputText class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none" 
                                  @bind-Value="model.Category" 
                                  placeholder="Category" />
                        <ValidationMessage For="@(() => model.Category)" class="text-xs text-red-600 mt-0.5" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Condition *</label>
                        <InputSelect class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none" 
                                    @bind-Value="model.Condition">
                            <option value="0">Good</option>
                            <option value="1">Fair</option>
                            <option value="2">Damaged</option>
                            <option value="3">Under Maintenance</option>
                            <option value="4">Retired</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => model.Condition)" class="text-xs text-red-600 mt-0.5" />
                        <p class="text-xs text-gray-500 mt-1">Physical condition of the equipment</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <InputTextArea class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none resize-none" 
                                      @bind-Value="model.Description" 
                                      rows="4"
                                      placeholder="Equipment specifications, serial number, or any notes" />
                        <ValidationMessage For="@(() => model.Description)" class="text-xs text-red-600 mt-0.5" />
                        <p class="text-xs text-gray-500 mt-1">Optional. Add detailed specifications, serial number, or any notes.</p>
                    </div>
                </div>

                @if (assignmentHistory != null && assignmentHistory.Any())
                {
                    <div class="space-y-3 pt-4">
                        <h3 class="text-base font-semibold font-title text-gray-900">Assignment History</h3>
                        <div class="space-y-2">
                            @foreach (var assignment in assignmentHistory)
                            {
                                <div class="bg-gray-50 rounded-lg p-3 text-sm">
                                    <div class="flex items-start justify-between mb-2">
                                        <div>
                                            <span class="font-medium text-gray-900">Application #@assignment.ApplicationId</span>
                                            @if (assignment.IsOverdue)
                                            {
                                                <span class="ml-2 px-2 py-0.5 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">Overdue</span>
                                            }
                                        </div>
                                        <span class="px-2 py-0.5 bg-gray-100 text-gray-700 text-xs font-medium rounded-full">@assignment.Status</span>
                                    </div>
                                    <div class="text-xs text-gray-600 space-y-1">
                                        <p><strong>Assigned:</strong> @assignment.AssignedAt.ToString("MMM dd, yyyy HH:mm")</p>
                                        @if (assignment.ExpectedReturnDate.HasValue)
                                        {
                                            <p><strong>Expected Return:</strong> @assignment.ExpectedReturnDate.Value.ToString("MMM dd, yyyy")</p>
                                        }
                                        @if (assignment.ReturnVerifiedAt.HasValue)
                                        {
                                            <p><strong>Returned:</strong> @assignment.ReturnVerifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                        }
                                        @if (!string.IsNullOrEmpty(assignment.AdminNotes))
                                        {
                                            <p><strong>Notes:</strong> @assignment.AdminNotes</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (errorMessage != null)
                {
                    <div class="flex items-start gap-2 p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg mt-4 text-sm">
                        <span class="text-lg">⚠</span>
                        <div class="flex-1">
                            <p class="font-medium mb-0.5">Failed to update equipment</p>
                            <p class="text-xs">@errorMessage</p>
                        </div>
                        <button type="button" class="text-red-600 hover:text-red-800" @onclick="@(() => errorMessage = null)">✕</button>
                    </div>
                }

                <div class="flex justify-end gap-3 pt-6 mt-6 border-t border-gray-200">
                    <button type="button" class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" @onclick="NavigateBack">
                        Cancel
                    </button>
                    <SubmitButton 
                        ButtonText="Update Equipment"
                        ProcessingText="Updating..."
                        IsProcessing="@isSubmitting"
                        OnClick="HandleSubmit" />
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public long EquipmentId { get; set; }

    private EditEquipmentModel? model;
    private List<AssignmentHistoryDto>? assignmentHistory;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? loadError;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadEquipment();
    }

    private async Task LoadEquipment()
    {
        try
        {
            isLoading = true;
            loadError = null;

            var equipment = await Http.GetFromJsonAsync<EquipmentDetailDto>($"api/equipment/{EquipmentId}");

            if (equipment == null)
            {
                loadError = "Equipment not found";
                return;
            }

            model = new EditEquipmentModel
            {
                Name = equipment.Name,
                EquipmentCode = equipment.EquipmentCode,
                Category = equipment.Category,
                Condition = equipment.Condition,
                Description = equipment.Description
            };

            assignmentHistory = equipment.AssignmentHistory;
        }
        catch (Exception ex)
        {
            loadError = $"Error loading equipment: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;

        try
        {
            isSubmitting = true;
            errorMessage = null;

            var response = await Http.PutAsJsonAsync($"api/equipment/{EquipmentId}", new
            {
                Name = model.Name,
                EquipmentCode = model.EquipmentCode,
                Category = model.Category,
                Condition = model.Condition,
                Description = string.IsNullOrWhiteSpace(model.Description) ? null : model.Description
            });

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess($"Equipment '{model.Name}' updated successfully!");
                await Task.Delay(800);
                Navigation.NavigateTo("/admin/equipment");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Server error: {errorContent}";
                ToastService.ShowError("Failed to update equipment");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            ToastService.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void NavigateBack() => Navigation.NavigateTo("/admin/equipment");

    public class EditEquipmentModel
    {
        [Required]
        [StringLength(255)]
        public string Name { get; set; } = string.Empty;

        [Required]
        [StringLength(100)]
        [RegularExpression(@"^[A-Z0-9\-_]+$")]
        public string EquipmentCode { get; set; } = string.Empty;

        [Required]
        [StringLength(100)]
        public string Category { get; set; } = string.Empty;

        [Required]
        public int Condition { get; set; } = 0;

        [StringLength(1000)]
        public string? Description { get; set; }
    }

    public class EquipmentDetailDto
    {
        public long Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string EquipmentCode { get; set; } = string.Empty;
        public string Category { get; set; } = string.Empty;
        public int Condition { get; set; }
        public string? Description { get; set; }
        public bool IsAvailable { get; set; }
        public List<AssignmentHistoryDto> AssignmentHistory { get; set; } = new();
    }

    public class AssignmentHistoryDto
    {
        public long Id { get; set; }
        public long ApplicationId { get; set; }
        public DateTime AssignedAt { get; set; }
        public DateTime? ExpectedReturnDate { get; set; }
        public DateTime? ReturnRequestedAt { get; set; }
        public DateTime? ReturnVerifiedAt { get; set; }
        public string Status { get; set; } = string.Empty;
        public string? AdminNotes { get; set; }
        public bool IsOverdue { get; set; }
    }
}
