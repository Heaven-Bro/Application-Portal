@page "/dashboard"
@attribute [Authorize(Roles = "Applicant")]
@inject HttpClient Http
@inject IToastService ToastService

<PageTitle>Dashboard</PageTitle>

@if (isLoading)
{
    <div class="flex justify-center items-center py-20">
        <div class="animate-spin rounded-full h-10 w-10 border-2 border-gray-200 border-t-[var(--primary)]"></div>
    </div>
}
else if (profile == null)
{
    <div class="max-w-3xl mx-auto px-4 py-10 text-center text-gray-600">
        Failed to load your profile.
    </div>
}
else
{
    <div class="max-w-4xl mx-auto px-4 py-6 space-y-6">
        <div class="bg-white rounded-lg border p-5">
            <h1 class="text-xl font-bold text-gray-900 mb-2">Applicant Dashboard</h1>
            <p class="text-sm text-gray-600">Manage your profile and account security.</p>
        </div>

        <div class="bg-white rounded-lg border p-5">
            <h2 class="text-base font-bold text-gray-900 mb-4">Profile Details</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm mb-6">
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase">Name</p>
                    <p class="font-medium text-gray-900">@profile.Name</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase">Username</p>
                    <p class="font-medium text-gray-900">@profile.Username</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase">Email</p>
                    <p class="font-medium text-gray-900">@profile.Email</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase">Status</p>
                    <p class="font-medium text-gray-900">@profile.Status</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Phone</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Phone" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Department</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Department" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Session</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Session" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Year</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Year" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Semester</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Semester" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Faculty</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.Faculty" />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Current Address</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.CurrentAddress" />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Permanent Address</label>
                    <input class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="profileForm.PermanentAddress" />
                </div>
            </div>

            <button class="mt-5 px-4 py-2 bg-[var(--primary)] text-white rounded-lg text-sm font-semibold"
                    disabled="@isSavingProfile"
                    @onclick="SaveProfile">
                @(isSavingProfile ? "Saving..." : "Save Profile")
            </button>
        </div>

        <div class="bg-white rounded-lg border p-5">
            <h2 class="text-base font-bold text-gray-900 mb-4">Change Password</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Current Password</label>
                    <input type="password" class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="passwordForm.CurrentPassword" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">New Password</label>
                    <input type="password" class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="passwordForm.NewPassword" />
                </div>
                <div>
                    <label class="block text-xs font-semibold text-gray-700 mb-1">Confirm Password</label>
                    <input type="password" class="w-full px-3 py-2 border rounded-lg text-sm"
                           @bind="passwordForm.ConfirmPassword" />
                </div>
            </div>
            <button class="mt-5 px-4 py-2 bg-gray-900 text-white rounded-lg text-sm font-semibold"
                    disabled="@isSavingPassword"
                    @onclick="ChangePassword">
                @(isSavingPassword ? "Updating..." : "Update Password")
            </button>
        </div>
    </div>
}

@code {
    private UserProfileDto? profile;
    private ProfileForm profileForm = new();
    private PasswordForm passwordForm = new();
    private bool isLoading = true;
    private bool isSavingProfile;
    private bool isSavingPassword;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        try
        {
            isLoading = true;
            profile = await Http.GetFromJsonAsync<UserProfileDto>("api/users/me");
            if (profile != null)
            {
                profileForm = new ProfileForm
                {
                    Phone = profile.Phone,
                    Department = profile.Department,
                    Session = profile.Session,
                    Year = profile.Year,
                    Semester = profile.Semester,
                    Faculty = profile.Faculty,
                    CurrentAddress = profile.CurrentAddress,
                    PermanentAddress = profile.PermanentAddress
                };
            }
        }
        catch
        {
            ToastService.ShowError("Failed to load profile");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveProfile()
    {
        if (isSavingProfile) return;
        isSavingProfile = true;

        try
        {
            var response = await Http.PutAsJsonAsync("api/users/me/profile", profileForm);
            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Profile updated");
                await LoadProfile();
            }
            else
            {
                ToastService.ShowError("Failed to update profile");
            }
        }
        catch
        {
            ToastService.ShowError("Failed to update profile");
        }
        finally
        {
            isSavingProfile = false;
        }
    }

    private async Task ChangePassword()
    {
        if (isSavingPassword) return;

        if (string.IsNullOrWhiteSpace(passwordForm.CurrentPassword) ||
            string.IsNullOrWhiteSpace(passwordForm.NewPassword))
        {
            ToastService.ShowError("Please fill in all password fields");
            return;
        }

        if (passwordForm.NewPassword != passwordForm.ConfirmPassword)
        {
            ToastService.ShowError("Password confirmation does not match");
            return;
        }

        isSavingPassword = true;

        try
        {
            var response = await Http.PutAsJsonAsync("api/users/me/password", new
            {
                passwordForm.CurrentPassword,
                passwordForm.NewPassword
            });

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Password updated");
                passwordForm = new PasswordForm();
            }
            else
            {
                ToastService.ShowError("Failed to update password");
            }
        }
        catch
        {
            ToastService.ShowError("Failed to update password");
        }
        finally
        {
            isSavingPassword = false;
        }
    }

    public class UserProfileDto
    {
        public long Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Username { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string? PhotoPath { get; set; }
        public string? Phone { get; set; }
        public string? PermanentAddress { get; set; }
        public string? CurrentAddress { get; set; }
        public string? Year { get; set; }
        public string? Session { get; set; }
        public string? Semester { get; set; }
        public string? Faculty { get; set; }
        public string? Department { get; set; }
    }

    public class ProfileForm
    {
        public string? PhotoPath { get; set; }
        public string? Phone { get; set; }
        public string? PermanentAddress { get; set; }
        public string? CurrentAddress { get; set; }
        public string? Year { get; set; }
        public string? Session { get; set; }
        public string? Semester { get; set; }
        public string? Faculty { get; set; }
        public string? Department { get; set; }
    }

    public class PasswordForm
    {
        public string CurrentPassword { get; set; } = string.Empty;
        public string NewPassword { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
