@page "/register"
@using Shared.Contracts.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject IToastService ToastService

@if (isChecking)
{
    <div class="redirect-wrapper">
        @if (isAlreadyLoggedIn)
        {
            <div class="redirect-card flex flex-col puff-card items-center justify-center">
                <svg class="check-icon" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
                <h2>You're already logged in</h2>
                <p>Redirecting to homepage...</p>
            </div>
        }
    </div>
}
else if (!isAlreadyLoggedIn)
{
    <div class="login-wrapper">
        <div class="login-card puff-card">
            <div class="login-header">
                <h1 class="login-title">Create account</h1>
                <p class="login-subtitle">Use your institutional email</p>
            </div>

            <EditForm Model="registerModel" OnValidSubmit="HandleRegister" class="login-form">
                <DataAnnotationsValidator />

                <div class="form-field">
                    <label for="name">Full name</label>
                    <input id="name"
                           @bind="registerModel.Name"
                           @bind:event="oninput"
                           type="text"
                           class="form-input"
                           placeholder="Your name"
                           disabled="@isProcessing"
                           autocomplete="name" />
                    <ValidationMessage For="@(() => registerModel.Name)" class="field-error" />
                </div>

                <div class="form-field">
                    <label for="email">Email address</label>
                    <input id="email"
                           @bind="registerModel.Email"
                           @bind:event="oninput"
                           type="email"
                           class="form-input"
                           placeholder="student@just.edu.bd"
                           disabled="@isProcessing"
                           autocomplete="email" />
                    <ValidationMessage For="@(() => registerModel.Email)" class="field-error" />
                </div>

                <div class="form-field">
                    <label for="password">Password</label>
                    <div class="password-field">
                        <input id="password"
                               @bind="registerModel.Password"
                               @bind:event="oninput"
                               type="@(showPassword ? "text" : "password")"
                               class="form-input"
                               placeholder="Create a password"
                               disabled="@isProcessing"
                               autocomplete="new-password" />
                        <button type="button"
                                @onclick="TogglePassword"
                                class="toggle-password"
                                disabled="@isProcessing"
                                aria-label="@(showPassword ? "Hide password" : "Show password")">
                            @if (showPassword)
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/>
                                </svg>
                            }
                            else
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/>
                                </svg>
                            }
                        </button>
                    </div>
                    <ValidationMessage For="@(() => registerModel.Password)" class="field-error" />
                </div>

                <div class="form-field">
                    <label for="confirmPassword">Confirm password</label>
                    <div class="password-field">
                        <input id="confirmPassword"
                               @bind="registerModel.ConfirmPassword"
                               @bind:event="oninput"
                               type="@(showConfirmPassword ? "text" : "password")"
                               class="form-input"
                               placeholder="Re-enter password"
                               disabled="@isProcessing"
                               autocomplete="new-password" />
                        <button type="button"
                                @onclick="ToggleConfirmPassword"
                                class="toggle-password"
                                disabled="@isProcessing"
                                aria-label="@(showConfirmPassword ? "Hide password" : "Show password")">
                            @if (showConfirmPassword)
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/>
                                </svg>
                            }
                            else
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/>
                                </svg>
                            }
                        </button>
                    </div>
                    <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="field-error" />
                </div>

                <SubmitButton
                    ButtonText="Register"
                    ProcessingText="Creating account..."
                    IsProcessing="isProcessing" />
            </EditForm>

            <div class="login-footer">
                <span>Already have an account?</span>
                <a href="/login" class="link-primary">Sign in</a>
            </div>
        </div>
    </div>
}

@code {
    private RegisterModel registerModel = new();
    private bool isProcessing = false;
    private bool isChecking = true;
    private bool isAlreadyLoggedIn = false;
    private bool showPassword = false;
    private bool showConfirmPassword = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var isLoggedIn = await AuthService.IsAuthenticatedAsync();
            if (isLoggedIn)
            {
                isAlreadyLoggedIn = true;
                StateHasChanged();
                
                await Task.Delay(1500);
                Navigation.NavigateTo("/", true);
                return;
            }
        }
        catch
        {
        }
        finally
        {
            isChecking = false;
        }
    }

    private void TogglePassword()
    {
        if (isProcessing) return;
        showPassword = !showPassword;
    }

    private void ToggleConfirmPassword()
    {
        if (isProcessing) return;
        showConfirmPassword = !showConfirmPassword;
    }

    private async Task HandleRegister()
    {
        if (isProcessing) return;

        var email = (registerModel.Email ?? string.Empty).Trim();
        if (!email.EndsWith(".just.edu.bd", StringComparison.OrdinalIgnoreCase))
        {
            ToastService.ShowWarning("Use University mail");
            return;
        }

        try
        {
            isProcessing = true;

            var response = await Http.PostAsJsonAsync("api/Auth/register", new
            {
                Email = email,
                Password = registerModel.Password,
                Name = registerModel.Name
            });

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Registration successful. Please verify your email.");
                Navigation.NavigateTo("/login", true);
            }
            else
            {
                ToastService.ShowError("Registration failed");
            }
        }
        catch
        {
            ToastService.ShowError("Registration failed");
        }
        finally
        {
            isProcessing = false;
        }
    }

    public class RegisterModel
    {
        [Required(ErrorMessage = "Name is required")]
        [MinLength(2, ErrorMessage = "Name must be at least 2 characters")]
        public string Name { get; set; } = "";

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Confirm password is required")]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = "";
    }
}
